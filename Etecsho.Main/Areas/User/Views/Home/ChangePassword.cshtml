@model Etecsho.Models.ViewModels.ChangeUserPasswordViewModel
@{
    ViewData["Title"] = " تغییر کلمه ی عبور  ";
    Layout = "~/Areas/User/Views/Shared/_UserPanel.cshtml";

}


    <div class="col-lg-9">

        <div class="overflow-hidden mb-1">
            <h2 class="font-weight-normal text-7 mb-0 txr"><strong class="font-weight-extra-bold">تغییر کلمه ی عبور </strong> من</h2>
        </div>
        <div class="overflow-hidden mb-4 pb-3">
            <p class="mb-0 txr">به تغییر کلمه ی عبور  هوش ایمن خوش اومدید</p>
        </div>

        <form asp-action="ChangePassword" asp-controller="Home" asp-area="User" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-lg-2 font-weight-bold text-dark col-form-label form-control-label text-2"></label>
                <div class=" col-lg-8 ">
                    <input class="form-control" asp-for="OldPassword" required="" type="text">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <label class="col-lg-2  txr font-weight-bold text-dark col-form-label form-control-label text-2 required">کلمه ی عبور فعلی </label>

            </div>
            <div class="form-group row">
                <label class="col-lg-2 font-weight-bold text-dark col-form-label form-control-label text-2"></label>

                <div class="col-lg-8">
                    <input class="form-control" asp-for="Password" required="" type="text">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <label class="col-lg-2 txr font-weight-bold text-dark col-form-label form-control-label text-2 required">کلمه ی عبور جدید  </label>

            </div>
            <div class="form-group row">
                <label class="col-lg-2 font-weight-bold text-dark col-form-label form-control-label text-2"></label>
                <div class="col-lg-8">
                    <input class="form-control" asp-for="RePassword" required="" type="text">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <label class="col-lg-2 txr font-weight-bold text-dark col-form-label form-control-label text-2 required">تکرار کلمه ی عبور  </label>

            </div>

            <div class="form-group row">
                <div class="form-group col-lg-9">

                </div>
                <div class="form-group col-lg-3">
                    <input type="submit" value="ارسال" class="btn btn-primary btn-modern float-right" data-loading-text="Loading...">
                </div>
            </div>


        </form>
    </div>

















