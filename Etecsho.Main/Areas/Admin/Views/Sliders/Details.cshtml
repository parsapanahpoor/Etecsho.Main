@model Etecsho.Models.Entites.Slider.Slider
@using Etecsho.Models.Entites.Blog;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> ویرایش اسلایدر </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">ویرایش اسلایدر    </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <form asp-action="Edit" asp-controller="Sliders" asp-area="Admin" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="SliderId" />
        <input type="hidden" asp-for="BlogImageName" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="IsActive" />
        <input type="hidden" asp-for="StartDate" />



        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-7">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">اطلاعات اسلایدر    </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> متن اول اسلایدر    </label>
                                        <input type="text" readonly asp-for="FirstText" class="form-control" id="exampleInputEmail1" placeholder="متن   اول اسلایدر   را وارد کنید">
                                        <span asp-validation-for="FirstText" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> متن دوم اسلایدر    </label>
                                        <input type="text" readonly asp-for="SecondeText" class="form-control" id="exampleInputEmail1" placeholder="متن   دوم  اسلایدر   را وارد کنید">
                                        <span asp-validation-for="SecondeText" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> متن سوم اسلایدر    </label>
                                        <input type="text" readonly asp-for="ThirdText" class="form-control" id="exampleInputEmail1" placeholder="متن   سوم اسلایدر   را وارد کنید">
                                        <span asp-validation-for="ThirdText" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> لینک     </label>
                                        <input type="text" readonly asp-for="Link" class="form-control" id="exampleInputEmail1" placeholder="لینک تصویر    را وارد کنید">
                                        <span asp-validation-for="Link" class="text-danger"></span>

                                    </div>




                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">


                                    @if (ViewData["Delete"] != null)
                                    {
                                        <a asp-action="Delete" asp-route-id="@Model.SliderId" asp-controller="Sliders" asp-area="Admin" class="btn btn-danger">  حذف اسلایدر  </a>

                                    }


                                    <a asp-action="Index" asp-controller="Sliders" asp-area="Admin" class="btn btn-primary">بازگشت به عقب </a>
                                </div>
                            </div>
                        </div>


                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <div class="col-md-5">
                        <!-- Horizontal Form -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">  تصویر  </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="form-horizontal">
                                <div class="card-body row">
                                    <img style="margin:auto; width:342px" id="imgAvatar" class="img-responsive rounded" src="~/Slider/image/@Model.BlogImageName" alt="upload_img">
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        

                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <!-- /.card-footer -->
                            </div>
                        </div>
                        <!-- /.card -->
                        <!-- general form elements disabled -->
                        <!-- /.card -->



                    </div>

                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </form>


</div>

@section Scripts
{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgBlogUp").change(function () {
            readURL(this);
        });
    </script>
    }